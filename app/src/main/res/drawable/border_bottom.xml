<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background of the view (optional, can be transparent) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <!-- Bottom border -->
    <item
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray" /> <!-- Adjust width and color -->
        </shape>
    </item>
</layer-list>
